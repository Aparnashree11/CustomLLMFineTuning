# Extend Apache Airflow with DVC and pipeline dependencies
FROM apache/airflow:2.7.3-python3.11

USER root

# Install git (required by DVC)
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

USER airflow

# Install DVC and pipeline Python dependencies
RUN pip install --no-cache-dir \
    dvc==3.55.2 \
    pyyaml>=6.0 \
    chardet>=5.2.0 \
    prometheus-client>=0.17.0 \
    transformers>=4.30.0 \
    torch>=2.0.0 \
    pandas>=2.0.0 \
    scikit-learn>=1.3.0 \
    regex>=2023.6.3
